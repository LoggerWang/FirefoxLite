<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="24dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/card_goup"
        android:background="@drawable/bg_raduis16_white"
        android:layout_centerVertical="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:id="@+id/update_title"
                android:background="@drawable/bg_update_title"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="20dp"
                    android:textColor="#2e60ff"
                    android:fontFamily="@font/bold"
                    android:gravity="left"
                    android:text="New Version Found"
                    android:textSize="19sp"
                    android:layout_marginRight="118dp"/>

                <TextView
                    android:id="@+id/tv_version_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#2e60ff"
                    android:fontFamily="@font/semibold"
                    android:gravity="left"
                    android:text="v1.0.18"
                    android:textSize="15sp"
                    android:layout_marginRight="144dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_msg_title"
                android:text="Update content"
                app:layout_constraintTop_toBottomOf="@+id/update_title"
                android:textSize="14sp"
                android:textColor="#191919"
                android:fontFamily="@font/semibold"
                android:layout_marginTop="36dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/update_message"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_message"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/update_title"
                app:layout_constraintBottom_toTopOf="@+id/all_bts"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/all_bts"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_bts"
                android:layout_gravity="end"
                android:background="#ffffff"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/bg_update_confim"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintRight_toLeftOf="@+id/center_empty">
                    <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginHorizontal="1dp"
                        android:background="@drawable/bg_raduis20_white"
                        android:fontFamily="@font/semibold"
                        android:text="Cancel"
                        android:gravity="center"
                        android:textColor="#2e60ff"
                        android:textSize="14sp" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:layout_width="12dp"
                    android:layout_height="1dp"
                    android:id="@+id/center_empty"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/bg_update_confim"
                    app:layout_constraintLeft_toRightOf="@id/center_empty"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/semibold"
                    android:text="Update"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_ok2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_update_confim"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/empty_view"
        app:layout_constraintBottom_toTopOf="@+id/card_goup"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="22dp"/>


    <ImageView
        android:layout_width="108dp"
        android:layout_height="144dp"
        android:layout_alignParentEnd="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/empty_view"
        android:src="@drawable/ic_rocket"
        android:layout_marginTop="-30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>